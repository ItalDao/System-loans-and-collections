<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <%- include('../partials/sidebar') %>

            <div class="col py-4">
                <div class="container-lg">
                    <div class="mb-5 pb-3 border-bottom border-light">
                        <h1 class="mb-1"><i class="bi bi-plus-square" style="color: #3b82f6;"></i> Otorgar Nuevo Préstamo</h1>
                        <p class="text-muted mb-0">Completa el formulario para desembolsar un nuevo préstamo</p>
                    </div>

                    <% if(mensajeError && mensajeError.length > 0) { %>
                        <div class="alert alert-danger"><%= mensajeError %></div>
                    <% } %>

                    <form action="/prestamos/guardar" method="POST" id="formPrestamo">
                        <div class="row">
                            
                            <div class="col-md-8">
                                <div class="card card-box p-4 border-0 shadow-sm">
                                    <h5 class="text-primary mb-3">Detalles Financieros</h5>
                                    
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Seleccionar Cliente</label>
                                        <select name="cliente_id" class="form-select" required>
                                            <option value="">-- Buscador de Clientes --</option>
                                            <% clientes.forEach(c => { %>
                                                <option value="<%= c.id %>"><%= c.dni %> - <%= c.nombre %> <%= c.apellido %></option>
                                            <% }) %>
                                        </select>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Monto a Prestar (<%= empresa.moneda %>)</label>
                                            <input type="number" step="0.01" name="monto" id="inputMonto" class="form-control" required placeholder="0.00">
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Interés (%)</label>
                                            <input type="number" step="0.01" name="interes" id="inputInteres" class="form-control" required placeholder="20">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Cantidad de Cuotas</label>
                                            <input type="number" name="cuotas" id="inputCuotas" class="form-control" required value="1">
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">Frecuencia de Pago</label>
                                            <select name="frecuencia" class="form-select">
                                                <option value="diario">Diario</option>
                                                <option value="semanal">Semanal</option>
                                                <option value="quincenal">Quincenal</option>
                                                <option value="mensual" selected>Mensual</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Fecha de Inicio</label>
                                        <input type="date" name="fecha_inicio" class="form-control" required value="<%= new Date().toISOString().split('T')[0] %>">
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card bg-dark text-white p-4 h-100 shadow-sm">
                                    <h5 class="mb-4 border-bottom pb-2">Simulación</h5>

                                    <div class="mb-4">
                                        <small class="text-white-50">Monto Solicitado</small>
                                        <h3 class="fw-bold text-primary" id="simMonto"><%= empresa.moneda %> 0.00</h3>
                                    </div>

                                    <div class="mb-4">
                                        <small class="text-white-50">Interés Ganado</small>
                                        <h3 class="fw-bold text-warning" id="simInteres"><%= empresa.moneda %> 0.00</h3>
                                    </div>

                                    <div class="mb-4">
                                        <small class="text-white-50">Total a Devolver</small>
                                        <h2 class="fw-bold text-success" id="simTotal"><%= empresa.moneda %> 0.00</h2>
                                    </div>

                                    <div class="d-grid mt-auto">
                                        <button type="submit" class="btn btn-success btn-lg fw-bold">
                                            Confirmar Préstamo
                                        </button>
                                        <a href="/prestamos" class="btn btn-outline-light mt-2 btn-sm">Cancelar</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <script>
        const inputMonto = document.getElementById('inputMonto');
        const inputInteres = document.getElementById('inputInteres');
        
        const simMonto = document.getElementById('simMonto');
        const simInteres = document.getElementById('simInteres');
        const simTotal = document.getElementById('simTotal');
        
        // Obtenemos el símbolo de moneda desde el servidor
        const moneda = "<%= empresa.moneda %>"; 

        function calcular() {
            const m = parseFloat(inputMonto.value) || 0;
            const i = parseFloat(inputInteres.value) || 0;
            
            const interesGanado = m * (i / 100);
            const total = m + interesGanado;

            simMonto.innerText = `${moneda} ${m.toFixed(2)}`;
            simInteres.innerText = `${moneda} ${interesGanado.toFixed(2)}`;
            simTotal.innerText = `${moneda} ${total.toFixed(2)}`;
        }

        inputMonto.addEventListener('input', calcular);
        inputInteres.addEventListener('input', calcular);
    </script>

<%- include('../partials/footer') %>
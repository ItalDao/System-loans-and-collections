<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <%- include('../partials/sidebar') %>

            <div class="col py-4">
                <div class="container-lg">
                    <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom border-light">
                        <div>
                            <h1 class="mb-1"><i class="bi bi-cash-coin" style="color: #3b82f6;"></i> Gestión de Préstamos</h1>
                            <p class="text-muted mb-0">Administra los préstamos activos y su desempeño</p>
                        </div>
                        
                        <div class="d-flex gap-2">
                            <a href="/reportes/excel/prestamos" class="btn btn-success">
                                <i class="bi bi-file-earmark-spreadsheet"></i> Exportar Excel
                            </a>
                            <a href="/prestamos/crear" class="btn btn-primary">
                                <i class="bi bi-plus-circle-fill"></i> Nuevo Préstamo
                            </a>
                        </div>
                    </div>

                    <% if(mensajeExito && mensajeExito.length > 0) { %>
                        <div class="d-none" id="flashMessageSuccess"><%= mensajeExito %></div>
                    <% } %>
                    <% if(mensajeError && mensajeError.length > 0) { %>
                        <div class="d-none" id="flashMessageError"><%= mensajeError %></div>
                    <% } %>

                    <div class="card card-box p-4 mb-4 border-0">
                        <form action="/prestamos" method="GET" class="row g-2 align-items-center">
                            <div class="col-auto">
                                <label class="col-form-label fw-bold"><i class="bi bi-search"></i> Buscar:</label>
                            </div>
                            <div class="col-auto flex-grow-1">
                                <input type="text" name="q" class="form-control" placeholder="Nombre de Cliente o ID Préstamo..." value="<%= busqueda %>">
                            </div>
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary">Filtrar</button>
                                <% if(busqueda) { %>
                                    <a href="/prestamos" class="btn btn-outline-primary">Limpiar</a>
                                <% } %>
                            </div>
                        </form>
                    </div>

                    <div class="card card-box p-3">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Cliente</th>
                                        <th>Monto Prestado</th>
                                        <th>Total a Pagar</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (prestamos.length > 0) { %>
                                        <% prestamos.forEach(p => { %>
                                            <tr>
                                                <td><span class="badge bg-info">#<%= p.id %></span></td>
                                                <td>
                                                    <div class="fw-bold"><%= p.nombre %> <%= p.apellido %></div>
                                                    <small class="text-muted">DNI: <%= p.dni %></small>
                                                </td>
                                                <td class="text-primary fw-bold">
                                                    <%= empresa.moneda %> <%= parseFloat(p.monto_prestado).toFixed(2) %>
                                                </td>
                                                <td class="text-success fw-bold">
                                                    <%= empresa.moneda %> <%= parseFloat(p.monto_total).toFixed(2) %>
                                                </td>
                                                <td>
                                                    <% if(p.estado == 'pendiente') { %>
                                                        <span class="badge bg-warning text-white">Pendiente</span>
                                                    <% } else if(p.estado == 'pagado') { %>
                                                        <span class="badge bg-success">Pagado</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Vencido</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <% if(p.estado != 'pagado') { %>
                                                            <a href="/pagos/registrar/<%= p.id %>" class="btn btn-sm btn-outline-success" title="Registrar Pago">
                                                                <i class="bi bi-cash-coin"></i>
                                                            </a>
                                                        <% } else { %>
                                                            <button class="btn btn-sm btn-info" disabled title="Pagado"><i class="bi bi-check2-all"></i></button>
                                                        <% } %>
                                                        
                                                        <a href="/prestamos/cronograma/<%= p.id %>" class="btn btn-sm btn-outline-primary" title="Ver Cronograma">
                                                            <i class="bi bi-calendar-week"></i>
                                                        </a>
                                                        
                                                        <a href="/reportes/contrato/<%= p.id %>" target="_blank" class="btn btn-sm btn-outline-danger" title="Descargar Contrato">
                                                            <i class="bi bi-file-earmark-pdf"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr><td colspan="6" class="text-center py-5 text-muted">No se encontraron préstamos registrados.</td></tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        
                        <% if (totalPages > 1) { %>
                            <nav class="mt-4 d-flex justify-content-between align-items-center">
                                <small class="text-muted">Página <%= currentPage %> de <%= totalPages %></small>
                                <ul class="pagination mb-0">
                                    <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="/prestamos?page=<%= currentPage - 1 %>&q=<%= busqueda %>">Anterior</a>
                                    </li>
                                    <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="/prestamos?page=<%= currentPage + 1 %>&q=<%= busqueda %>">Siguiente</a>
                                    </li>
                                </ul>
                            </nav>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('../partials/footer') %>
<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <%- include('../partials/sidebar') %>

            <div class="col py-4">
                <div class="container-lg">
                    <!-- HEADER -->
                    <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom border-light">
                        <div>
                            <h1 class="mb-1"><i class="bi bi-people-fill" style="color: #3b82f6;"></i> Clientes</h1>
                            <p class="text-muted mb-0">Gestiona el directorio de clientes y sus información de contacto</p>
                        </div>
                        <a href="/clientes/crear" class="btn btn-primary">
                            <i class="bi bi-person-plus-fill"></i> Agregar Cliente
                        </a>
                    </div>

                    <% if(mensajeExito && mensajeExito.length > 0) { %>
                        <div class="d-none" id="flashMessageSuccess"><%= mensajeExito %></div>
                    <% } %>

                    <!-- SEARCH & FILTER -->
                    <div class="card card-box mb-4 border-0">
                        <form action="/clientes" method="GET" class="p-4">
                            <div class="row g-3 align-items-end">
                                <div class="col-md-8">
                                    <label class="form-label"><i class="bi bi-search"></i> Buscar Clientes</label>
                                    <input type="text" name="q" class="form-control" placeholder="Nombre, apellido, DNI, teléfono o correo..." value="<%= busqueda %>">
                                </div>
                                <div class="col-md-4 d-flex gap-2">
                                    <button type="submit" class="btn btn-primary flex-grow-1">
                                        <i class="bi bi-search"></i> Buscar
                                    </button>
                                    <% if(busqueda) { %>
                                        <a href="/clientes" class="btn btn-outline-primary">
                                            <i class="bi bi-x-circle"></i> Limpiar
                                        </a>
                                    <% } %>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- TABLE -->
                    <div class="card card-box border-0 overflow-hidden">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 60px;">Foto</th>
                                        <th style="width: 100px;">DNI</th>
                                        <th>Nombre Completo</th>
                                        <th>Contacto</th>
                                        <th style="width: 120px; text-align: center;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (clientes.length > 0) { %>
                                        <% clientes.forEach((cliente, index) => { %>
                                            <tr style="animation: fadeIn 0.5s ease-out <%= index * 0.05 %>s backwards;">
                                                <td>
                                                    <% if(cliente.foto) { %>
                                                        <img src="/uploads/<%= cliente.foto %>" class="rounded-circle border-2 border-light" style="width: 45px; height: 45px; object-fit: cover; cursor: pointer;" data-bs-toggle="modal" data-bs-target="#fotoModal<%= cliente.id %>">
                                                    <% } else { %>
                                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fw-bold" style="width: 45px; height: 45px;">
                                                            <%= cliente.nombre.charAt(0).toUpperCase() %>
                                                        </div>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info text-white border" style="font-size: 0.85rem; font-weight: 600;">
                                                        <%= cliente.dni %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="fw-700" style="color: #0f1419;">
                                                        <%= cliente.nombre %> <%= cliente.apellido %>
                                                    </div>
                                                    <small class="text-muted d-block" style="margin-top: 3px;">
                                                        <i class="bi bi-geo-alt"></i> <%= cliente.direccion || 'Sin dirección registrada' %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <div class="small" style="color: #3a4d68; margin-bottom: 4px;">
                                                        <i class="bi bi-telephone" style="color: #3b82f6;"></i> <%= cliente.telefono || '-' %>
                                                    </div>
                                                    <div class="small text-muted">
                                                        <i class="bi bi-envelope"></i> <%= cliente.email ? cliente.email.substring(0, 20) + '...' : '-' %>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <a href="/clientes/ver/<%= cliente.id %>" class="btn btn-sm btn-info text-white" title="Ver Perfil">
                                                            <i class="bi bi-eye-fill"></i>
                                                        </a>
                                                        <a href="/clientes/editar/<%= cliente.id %>" class="btn btn-sm btn-outline-primary" title="Editar Cliente">
                                                            <i class="bi bi-pencil-fill"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center py-5">
                                                <div class="mb-3">
                                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #cbd5e1;"></i>
                                                </div>
                                                <h5 class="text-muted">No se encontraron clientes</h5>
                                                <p class="text-muted mb-3">
                                                    <% if(busqueda) { %>
                                                        Intenta con otros términos de búsqueda
                                                    <% } else { %>
                                                        Comienza agregando tu primer cliente
                                                    <% } %>
                                                </p>
                                                <a href="/clientes/crear" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-person-plus-fill"></i> Agregar Cliente
                                                </a>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <!-- PAGINATION -->
                        <% if (totalPages > 1) { %>
                            <div class="card-footer bg-light border-top d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    <strong>Página <%= currentPage %> de <%= totalPages %></strong> • Total de clientes: <%= clientes.length %>
                                </small>
                                <nav>
                                    <ul class="pagination mb-0">
                                        <li class="page-item <%= currentPage == 1 ? 'disabled' : '' %>">
                                            <a class="page-link" href="/clientes?page=<%= currentPage - 1 %>&q=<%= busqueda %>">
                                                <i class="bi bi-chevron-left"></i> Anterior
                                            </a>
                                        </li>
                                        <li class="page-item <%= currentPage == totalPages ? 'disabled' : '' %>">
                                            <a class="page-link" href="/clientes?page=<%= currentPage + 1 %>&q=<%= busqueda %>">
                                                Siguiente <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fw-700 {
            font-weight: 700;
        }

        .btn-group .btn {
            padding: 5px 10px;
            font-size: 0.85rem;
        }
    </style>

<%- include('../partials/footer') %>
<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <%- include('../partials/sidebar') %>

            <div class="col py-3">
                <div class="container">
                    
                    <div class="card card-box mb-4 border-primary border-top border-4">
                        <div class="card-body d-flex align-items-center flex-wrap gap-3">
                            
                            <div class="me-2">
                                <% if (cliente.foto) { %>
                                    <img src="/uploads/<%= cliente.foto %>" class="rounded-circle border border-3 border-white shadow-sm" style="width: 100px; height: 100px; object-fit: cover;">
                                <% } else { %>
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 100px; height: 100px; font-size: 2.5rem;">
                                        <%= cliente.nombre.charAt(0) %>
                                    </div>
                                <% } %>
                            </div>
                            
                            <div class="flex-grow-1">
                                <h2 class="mb-0 fw-bold"><%= cliente.nombre %> <%= cliente.apellido %></h2>
                                <p class="text-muted mb-2">DNI: <strong><%= cliente.dni %></strong></p>
                                
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge bg-info text-white border"><i class="bi bi-geo-alt-fill text-danger"></i> <%= cliente.direccion || 'Sin dirección' %></span>
                                    <span class="badge bg-info text-white border"><i class="bi bi-telephone-fill text-success"></i> <%= cliente.telefono || 'Sin teléfono' %></span>
                                    <span class="badge bg-info text-white border"><i class="bi bi-envelope-fill text-primary"></i> <%= cliente.email || 'Sin email' %></span>
                                </div>
                            </div>

                            <div class="text-end mt-3 mt-md-0">
                                <a href="/reportes/estado_cuenta/<%= cliente.id %>" target="_blank" class="btn btn-dark shadow-sm">
                                    <i class="bi bi-file-earmark-pdf-fill"></i> Estado de Cuenta
                                </a>
                                <a href="/clientes" class="btn btn-outline-secondary ms-2">Volver</a>
                            </div>
                        </div>
                    </div>

                    <ul class="nav nav-tabs mb-3" id="clientTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="prestamos-tab" data-bs-toggle="tab" data-bs-target="#prestamos" type="button">
                                <i class="bi bi-cash-stack"></i> Préstamos (<%= prestamos.length %>)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="empenos-tab" data-bs-toggle="tab" data-bs-target="#empenos" type="button">
                                <i class="bi bi-gem"></i> Empeños (<%= empenos.length %>)
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="ahorros-tab" data-bs-toggle="tab" data-bs-target="#ahorros" type="button">
                                <i class="bi bi-piggy-bank"></i> Ahorros
                            </button>
                        </li>
                    </ul>

                    <div class="tab-content" id="clientTabsContent">
                        
                        <div class="tab-pane fade show active" id="prestamos" role="tabpanel">
                            <div class="card card-box p-0 border-0 shadow-sm overflow-hidden">
                                <% if(prestamos.length > 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle mb-0">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Fecha Inicio</th>
                                                    <th>Prestado</th>
                                                    <th>Total a Pagar</th>
                                                    <th>Estado</th>
                                                    <th>Acción</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% prestamos.forEach(p => { %>
                                                    <tr>
                                                        <td><span class="badge bg-secondary">#<%= p.id %></span></td>
                                                        <td><%= new Date(p.fecha_inicio).toLocaleDateString() %></td>
                                                        <td class="text-primary fw-bold"><%= empresa.moneda %> <%= parseFloat(p.monto_prestado).toFixed(2) %></td>
                                                        <td class="text-success fw-bold"><%= empresa.moneda %> <%= parseFloat(p.monto_total).toFixed(2) %></td>
                                                        <td>
                                                            <% if(p.estado == 'pendiente') { %>
                                                                <span class="badge bg-warning text-dark">Pendiente</span>
                                                            <% } else if(p.estado == 'pagado') { %>
                                                                <span class="badge bg-success">Pagado</span>
                                                            <% } else { %>
                                                                <span class="badge bg-danger">Vencido</span>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <div class="btn-group">
                                                                <% if(p.estado != 'pagado') { %>
                                                                    <a href="/pagos/registrar/<%= p.id %>" class="btn btn-sm btn-outline-success" title="Cobrar"><i class="bi bi-cash"></i></a>
                                                                <% } %>
                                                                <a href="/prestamos/cronograma/<%= p.id %>" class="btn btn-sm btn-outline-primary" title="Ver Cronograma"><i class="bi bi-calendar-week"></i></a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-5 text-muted"><i class="bi bi-inbox fs-1 mb-2 d-block"></i>Este cliente no tiene historial de préstamos.</div>
                                <% } %>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="empenos" role="tabpanel">
                            <div class="card card-box p-3 border-0 shadow-sm">
                                <% if(empenos.length > 0) { %>
                                    <div class="row row-cols-1 row-cols-md-2 g-3">
                                        <% empenos.forEach(e => { %>
                                            <div class="col">
                                                <div class="border rounded p-3 d-flex align-items-center bg-white h-100">
                                                    <% if(e.imagen) { %>
                                                        <img src="/uploads/<%= e.imagen %>" class="rounded me-3 border" style="width: 70px; height: 70px; object-fit: cover;">
                                                    <% } else { %>
                                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center border" style="width: 70px; height: 70px;"><i class="bi bi-box fs-3 text-secondary"></i></div>
                                                    <% } %>
                                                    <div class="flex-grow-1">
                                                        <h6 class="mb-1 fw-bold"><%= e.nombre_articulo %></h6>
                                                        <p class="small text-muted mb-1 text-truncate" style="max-width: 200px;"><%= e.descripcion %></p>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <span class="badge bg-primary">Prestado: <%= empresa.moneda %><%= e.monto_prestado %></span>
                                                            <% if(e.estado === 'en_custodia') { %>
                                                                <span class="badge bg-info text-dark">En Custodia</span>
                                                            <% } else { %>
                                                                <span class="badge bg-secondary"><%= e.estado %></span>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="text-center py-5 text-muted"><i class="bi bi-gem fs-1 mb-2 d-block"></i>Este cliente no tiene empeños registrados.</div>
                                <% } %>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="ahorros" role="tabpanel">
                            <div class="card card-box p-5 text-center border-0 shadow-sm">
                                <% if(cuentaAhorro) { %>
                                    <h5 class="text-muted text-uppercase ls-1">Saldo Disponible</h5>
                                    <h1 class="text-success display-3 fw-bold mb-3"><%= empresa.moneda %> <%= parseFloat(cuentaAhorro.saldo_actual).toFixed(2) %></h1>
                                    <p class="mb-4 text-muted">Cuenta Nro: <strong><%= cuentaAhorro.id %></strong></p>
                                    
                                    <div class="d-flex justify-content-center gap-3">
                                        <a href="/ahorros/ver/<%= cuentaAhorro.id %>" class="btn btn-primary px-4"><i class="bi bi-arrow-left-right me-2"></i> Ver Movimientos</a>
                                    </div>
                                <% } else { %>
                                    <div class="py-3">
                                        <i class="bi bi-piggy-bank fs-1 text-muted opacity-50"></i>
                                        <p class="mt-3 fs-5 text-muted">Este cliente no tiene cuenta de ahorros activa.</p>
                                        <a href="/ahorros/aperturar" class="btn btn-outline-primary mt-2"><i class="bi bi-plus-circle"></i> Aperturar Cuenta</a>
                                    </div>
                                <% } %>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
<%- include('../partials/footer') %>